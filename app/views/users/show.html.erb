<div class="container py-5">
  <div class="blog-box py-2 bg-white">
    <%= render 'users/info', user: @user %>
  </div>
</div>
  <h1 class="title-text">Memories</h1>
  <div class="box">
    <ul class="gallery">
      <% @blogs.each do |blog| %>
      <li>
        <div class="box-item">
          <%= link_to blog_path(blog) do %>
          <%= attachment_image_tag blog, :image %>
          <% end %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="mb-4 d-flex justify-content-center">
  <%= paginate(@blogs) %>
  </div>
