<div class="container">
  <div class="homeImage d-flex justify-content-center">
    <%= attachment_image_tag(user, :home_image, fallback: "camera.jpg", :size => '700x400', class: "homeImage1" ) %>
  </div>
  <div class="image-area2 mx-auto">
    <%= attachment_image_tag(user, :profile_image, fallback: "no_image.jpg", :size => '192x192', class: "rounded-circle image-prf2"  ) %>
  </div>
          <h2><%= user.name %></h2>
          <p><%= user.introduction %></p>
          <%= link_to user_followings_path(user) do %>
            <h4>follow<%= user.followings.count %></h4>
          <% end %>
          <%= link_to user_followers_path(user) do %>
            <h4>follower<%= user.followers.count %></h4>
          <% end %>
  <div class="userEdit">
    <% if user.id == current_user.id %>
      <p class="py-3"><%= link_to "プロフィール編集", edit_user_path(user), class: "button-n" %></p>
    <% else %>
      <% if current_user.following?(user) %>
        <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete, class: "button-d" %>
      <% else %>
        <%= link_to "Follow", user_relationships_path(user.id), method: :post, class: "button-p" %>
      <% end %>
    <% end %>
  </div>
</div>