<div class="container blog list_memo py-5  border-left border-right border-dark">
  <div class="row">
    <div class="col offset-1 mb-2">
      <h1>Users</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>Follow</th>
            <th>Follower</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user) do %>
              <%= attachment_image_tag(user, :profile_image,  fallback: "no_image.jpg", :size => '30x30', class: "rounded-circle" ) %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td>0</td>
            <td>0</td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>