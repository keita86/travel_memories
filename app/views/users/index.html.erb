<div class="container blog list_memo py-5  border-left border-right border-dark">
  <div class="row">
    <div class="col offset-1 mb-2">
      <h1>Users</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>Follow</th>
            <th>Follower</th>
            <th>+follow</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user) do %>
              <%= attachment_image_tag(user, :profile_image,  fallback: "no_image.jpg", :size => '30x30', class: "rounded-circle" ) %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= user.followings.count %></td>
            <td><%= user.followers.count %></td>
            <td>
            <% if user.id == current_user.id %>
              <%= link_to "show", user_path(user) %>
            <% else %>
              <% if current_user.following?(user) %>
                <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete %>
              <% else %>
                <%= link_to "Follow", user_relationships_path(user.id), method: :post %>
              <% end %>
            <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>