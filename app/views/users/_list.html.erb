<div class="list">
  <% users.each do |user| %>
  <div class="prf-box">
    <div class="image-area mx-auto">
      <%= link_to user_path(user) do %>
      <%= attachment_image_tag(user, :profile_image,  fallback: "no_image.jpg", :size => '192x192', class: "rounded-circle image-prf" ) %>
      <% end %>
    </div>
    <div class="name-area">
      <%= user.name %>
    </div>
    <div class="follow-area">
      <%= user.followings.count %>
    </div>
    <div class="follower-area">
      <%= user.followers.count %>
    </div>
    <div class="follow-button-area">
      <% if user.id == current_user.id %>
       <%= link_to "show", user_path(user), class: "button-n" %>
      <% else %>
        <% if current_user.following?(user) %>
          <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete, class: "button-d" %>
        <% else %>
          <%= link_to "Follow", user_relationships_path(user.id), method: :post, class: "button-p" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>