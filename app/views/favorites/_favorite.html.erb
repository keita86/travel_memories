<div class="favorite-link" id="favorite-link-<%= blog.id %>">
  <% if blog.favorited_by?(current_user) %>
    <%= link_to blog_favorites_path(blog.id), method: :delete, remote: true do %>
      <i class="fas fa-heart text-danger"></i><%= blog.favorites.count %>
    <% end %>
  <% else %>
    <%= link_to blog_favorites_path(blog.id), method: :post, remote: true do %>
      <i class="far fa-heart text-dark"></i><%= blog.favorites.count %>
    <% end %>
  <% end %>
</div>