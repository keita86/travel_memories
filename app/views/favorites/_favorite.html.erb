<div class="favorite-link" id="favorite-link-<%= blog.id %>">
  <% if blog.favorited_by?(current_user) %>
    <%= link_to blog_favorites_path(blog.id), method: :delete, remote: true, class: "button-like" do %>
      <i class="fas fa-heart"></i><%= blog.favorites.count %>
    <% end %>
  <% else %>
    <%= link_to blog_favorites_path(blog.id), method: :post, remote: true, class: "button-unlike" do %>
      <i class="far fa-heart"></i><%= blog.favorites.count %>
    <% end %>
  <% end %>
</div>