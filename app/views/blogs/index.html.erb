<div class="haikei2">
<div class="container blog py-5 border-left border-right border-dark">
  <div class="row">
    <div class="col">
      <%= render 'layouts/search' %>
    </div>
  </div>
  <div class="row">
    <div class="col my-5">
      <%= link_to "Create New Memory", new_blog_path, class: "fas fa-plus btn btn-outline-success btn-lg" %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="blog-box">
      <% @blogs.each do |blog| %>
        <div class="box-item d-flex flex-column">
        <%= link_to blog_path(blog) do %>
        <%= attachment_image_tag blog, :image, class: "Photo" %>
        <% end %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
</div>