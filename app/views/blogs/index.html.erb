<div id="slider2"></div>
<div class="search-form">
  <h3 class="text-white title-text">Country Search</h3>
  <form class="search">
    <%= form_with url: search_country_path, local: true, method: :get do |f| %>
      <%= f.country_select :country_name, priority_countries: ["JP", "US"], class: "input bg-white" %>
      <%= f.submit "検索", class: "button" %>
    <% end %>
  </form>
</div>
<div class="create-form">
  <% unless current_user == User.guest_user %>
    <h3 class="text-white title-text">Create Memory</h3>
    <%= link_to "Create New Memory", new_blog_path, class: "fas fa-plus button-s" %>
  <% end %>
</div>
<h1 class="title-text">Memories</h1>
<div class="box">
  <ul class="gallery">
    <% @blogs.each do |blog| %>
    <li>
      <div class="box-item">
        <%= link_to blog_path(blog) do %>
        <%= attachment_image_tag blog, :image %>
        <% end %>
      </div>
    </li>
    <% end %>
  </ul>
</div>
<div class="mb-4 d-flex justify-content-center">
  <%= paginate(@blogs) %>
</div>
