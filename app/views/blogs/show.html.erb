<div class="haikei">
<div class="container memo blog  border-left border-right border-dark">
  <%= render 'users/info', user: @blog.user %>
  <div class="row py-5 border-bottom border-dark">
    <div class="col offset-1">
      <ul class="list-unstyled">
        <li><%= attachment_image_tag @blog, :image, width: '90%', height: '90%' %></li>
        <li><h2><%= @blog.title %></h2></li>
        <li><h4><%= @blog.description %></h4></li>
        <li><h4><%= @blog.created_at.strftime('%Y/%m/%d') %></h4></li>
        <li><h4><%= @blog.country_name %></h4></li>
      </ul>
      <% if @blog.user == current_user %>
      <%= link_to "更新", edit_blog_path(@blog) %>
      <%= link_to "削除", blog_path(@blog), method: :delete %>
      <% end %>
        <% if @blog.favorited_by?(current_user) %>
          <%= link_to blog_favorites_path(@blog), method: :delete do %>
            <i class="fas fa-heart text-danger"></i><%= @blog.favorites.count %>
          <% end %>
        <% else %>
          <%= link_to blog_favorites_path(@blog), method: :post do %>
            <i class="far fa-heart text-dark"></i><%= @blog.favorites.count %>
          <% end %>
        <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col offset-1 d-flex align-items-start flex-column">
      <p>コメント件数：<%= @blog.blog_comments.count %></p>
      <% @blog.blog_comments.each do |blog_comment| %>
        <%= attachment_image_tag(blog_comment.user, :profile_image, fallback: "no_image.jpg", :size => '30x30', class: "rounded-circle") %>
        <%= blog_comment.user.name %>
        <%= blog_comment.created_at.strftime('%Y/%m/%d') %><%= blog_comment.comment %>
        <% if blog_comment.user == current_user %>
          <%= link_to "削除", blog_blog_comment_path(blog_comment.blog, blog_comment), method: :delete %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col offset-1">
      <div class="new-comment">
        <%= form_with(model:[@blog, @blog_comment], local: true) do |f| %>
        <%= f.text_area :comment, rows:'3',placeholder: "コメント" %>
        <%= f.submit "送信する" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
</div>