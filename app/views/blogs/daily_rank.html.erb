<div class="container blog memo border-left border-right border-dark">
  <div class="row">
    <div class="col">
      <h1 class="center green"><i class="fas fa-user-crown"></i>今日いいねランキング</h1>
    </div>
    <p>　</p>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to daily_rank_path, class: "left btn green" do %>
        今日
      <% end %>
      <%= link_to weekly_rank_path, class: "center btn" do %>
        今週
      <% end %>
      <%= link_to monthly_rank_path, class: "right btn" do %>
        今月
      <% end %>

    </div>
  </div>
  <div class="row">
    <% @days.each_with_index do |blog, i| %>
    <div class="col-md-5 offset-1">
      <ul class="list-unstyled">
        <li class="user-feed">
          <%= link_to user_path(blog.user) do %>
            <%= attachment_image_tag blog, :image, width: '90%', height: '90%' %>
          <% end %>
        </li>
      </ul>
    </div>
    <div class="col-md-5">
      <ul class="list-unstyled">
        <li>
          <%= link_to user_path(blog.user) do %>
            <h2><%= blog.user.name %></h2>
          <% end %>
        </li>
        <li class="fas fa-crown non-margin">ランク：<b><%= i+1 %>位</b></li>
        <li>今日いいね：<b><%= blog.favorites.where(created_at: Time.zone.now.all_day).count %></b></li>
      </ul>
    </div>
    <% end %>
  </div>
</div>
