<div class="haikei2">
  <div class="container py-5">
    <div class="blog-box py-5 bg-white">
      <div class="container">
        <div class="row offset-1">
          <h1 class="midasi">Day Ranking</h1>
        </div>
        <div class="rank-time-box py-2 my-5 bg-white">
          <div class="row d-flex justify-content-center">
            <h4 class="my-3">Select Time</h4>
          </div>
          <div class="row mb-3 d-flex justify-content-around">
              <%= link_to daily_rank_path, class: "left btn btn-brackets" do %>
                <h6>Today</h6>
              <% end %>
              <%= link_to weekly_rank_path, class: "center btn btn-brackets" do %>
                <h6>This week</h6>
              <% end %>
              <%= link_to monthly_rank_path, class: "right btn btn-brackets" do %>
                <h6>This month</h6>
              <% end %>
          </div>
        </div>
        <% @days.each_with_index do |blog, i| %>
        <div class="row  d-flex justify-content-center">
          <div class="col">
            <div class="rank-box py-2">
              <div class="my-3">
                <h2 class="fas fa-crown"></h2>
              </div>
              <ul class="list-unstyled">
                <li class="mt-3">
                  <%= link_to blog_path(blog) do %>
                    <%= attachment_image_tag blog, :image, class: "rank-img" %>
                  <% end %>
                </li>
                <li class="my-2">
                  <%= link_to user_path(blog.user) do %>
                    <h2><%= blog.user.name %></h2>
                  <% end %>
                </li>
                <li class="ribbon"><h3>Rank Best <%= i+1 %></h3></li>
              </ul>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>