<div class="haikei">
  <div class="container box-form">
    <div class="row">
      <div class="col mt-3">
        <div class="form-edit py-2 bg-white">
          <div class="my-4">
            <h2 class="title-text2">Edit Memory</h2>
          </div>
          <%= render 'layouts/errors', obj: @blog %>
          <%= form_with model: @blog, local:true do |f| %>
            <h4>Imaage</h4>
            <%= f.attachment_field :image %>
            <h4>Title</h4>
            <%= f.text_field :title, placeholder: "タイトル" %>
            <h4>Description</h4>
            <%= f.text_area :description, placeholder: "記録内容" %>
            <h4>Address</h4>
            <%= f.text_field :address, placeholder: "住所" %>
            <h4>Country</h4>
            <%= f.country_select :country_name, priority_countries: ["JP", "US"] %><br>
            <div class="my-4">
            <%= f.submit 'Update Memory', class: "button-s" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>