<div class="haikei">
<div class="container">
  <div class="row">
    <div class="col">
      <div class="form-sign py-3 bg-white">
        <div class="my-3">
          <%= image_tag('Logotitle2.png', :size => '250x50') %>
        </div>
        <h5 class="my-3">今すぐ記憶を共有しよう！</h5>
      　<%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="field my-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
        </div>
        <div class="field my-4">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field my-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions my-4">
          <%= f.submit "Log in", class: "button-s" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="form-sign py-3 bg-white">
        <h5>アカウントを登録する</h5>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
</div>