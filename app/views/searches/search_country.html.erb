<div class="haikei2">
  <% if @country.exists? %>
  <div class="container py-5">
    <div class="blog-box my-5 bg-light">
      <div class="container">
        <div class="row my-4 offset-1">
          <h2 class="midasi">Result Country</h2>
        </div>
        <div class="row">
          <div class="memories-box">
            <h3>Memories</h3>
            <% @country.each do |blog| %>
              <%= link_to blog_path(blog) do %>
              <%= attachment_image_tag blog, :image, class: "Photo" %>
              <% end %>
            <% end %>
            <div class="mb-4 d-flex justify-content-center">
               <%= paginate(@country) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% else %>
    <div class="container py-5">
    <div class="blog-box my-5 bg-light">
      <div class="container">
        <div class="row my-4 offset-1">
          <h2 class="midasi">Result Country</h2>
        </div>
        <div class="memories-box">
          <div class="row d-flex justify-content-center">
            <h3>記録はありません</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>