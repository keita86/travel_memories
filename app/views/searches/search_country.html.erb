<div class="haikei2">
<% if @country.exists? %>
<div class="container blog border-left border-right border-dark">
  <div class="row">
    <div class="col">
      <h2>Results index</h2>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="blog-box">
        <% @country.each do |blog| %>
        <div class="box-item d-flex flex-column">
          <%= link_to blog_path(blog) do %>
          <%= attachment_image_tag blog, :image, class: "Photo" %>
          <% end %>
        </div>
      <% end %>
      </div>
    </div>
  <div class="mb-4 d-flex justify-content-center">
    <%= paginate(@country) %>
  </div>
  </div>
</div>
<% else %>
<div class="container haba takasa blog border-left border-right border-dark">
  <div class="row">
    <div class="col">
      <h2>Results index</h2>
    </div>
  </div>
  <div class="row">
    <h3>記録はありません</h3>
  </div>
</div>
<% end %>
</div>